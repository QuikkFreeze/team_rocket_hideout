<%= form_with(url: search_path, local: true, method: "get") do %>
  <div class="field has-addons has-addons-right">
    <p class="control">
      <%= text_field_tag(:search_term, nil, class: 'input', placeholder: 'Search Pokemon') %>
    </p>
    <p class="control">
      <span class="select">
        <%= select_tag(:selected_type, options_from_collection_for_select(@all_types, "id", "name"), include_blank: "All")%>
      </span>
    </p>
    <p class="control">
      <%= submit_tag("Search", class: "button is-info")%>
    </p>
  </div>
<% end %>