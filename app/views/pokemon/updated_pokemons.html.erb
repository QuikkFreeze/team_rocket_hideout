<h1 class="title">Recently Updated Pokémon</h1>

<% if @pokemons.any? %>
  <div class="columns is-multiline is-mobile ">
      <%= render partial: 'shared/pokemon_card', object: @pokemons %>
  </div>
<% else %>
  <p>There have been no Pokémon updated recently.</p>
<% end %>

<%= paginate @pokemons %>