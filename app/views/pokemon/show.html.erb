<div class="container">
  <div class="columns">
    <div class="column is-3">
      <figure class="image is-4by4">
        <%= image_tag("#{url_for(@pokemon.image)}", alt: "#{@pokemon.name}-picture") %>
      </figure>
    </div>
    <div class="column">
      <table class="table">
        <thead>
          <tr>
            <th class="is-size-3" colspan='2'>Pok√©mon Information</th>
          </tr>
        </thead>
        <tbody>
        <tr>
          <th class="is-size-5">Name</th>
          <td class="has-text-centered is-size-5"><%= @pokemon.name %></td>
        </tr>
        <tr>
          <th class="is-size-5">Dex Id</th>
          <td class="has-text-centered is-size-5"><%= @pokemon.dex_id %></td>
        </tr>
        <tr>
          <th class="is-size-5">Species</th>
          <td class="has-text-centered is-size-5"><%= @pokemon.species %></td>
        </tr>
        <tr>
          <th class="is-size-5">Height</th>
          <td class="has-text-centered is-size-5"><%= @pokemon.height %></td>
        </tr>
        <tr>
          <th class="is-size-5">Weight</th>
          <td class="has-text-centered is-size-5"><%= @pokemon.weight %></td>
        </tr>
        <tr>
          <th class="is-size-5">Types</th>
          <td class="has-text-centered is-size-6">
            <% @pokemon.typings.each do |typing| %>
              <%= link_to typing.name, typing_path(typing), class: "type-icon #{typing.color_class}" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th class="is-size-5">Description</th>
          <td class="has-text-centered is-size-5"><%= @pokemon.description %></td>
        </tr>
        <tr>
          <th class="is-size-5">Price</th>
          <td class="has-text-centered is-size-5">
            <div class="field has-addons has-addons-centered">
                <p class="control">
                  <span class="tag is-danger is-light is-size-5">
                    <%= number_to_currency(@pokemon.price) %>
                  </span>
                </p>
                <p class="control">
                  <% if session[:cart].include? @pokemon.id %>
                    <button class="button is-success">
                      <p class="is-size-6"><i class="fas fa-check"></i>  Added to Cart</p>
                    </button>
                  <% else %>
                    <%= button_to add_to_cart_path(@pokemon.id), class: "button is-danger", method: :post do %>
                      <p class="is-size-6"><i class="fas fa-shopping-cart"></i>    Add to Cart</p>
                    <% end %>
                  <% end %>
                </p>
              </div>
            </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>