<% @pokemons.each do |pokemon| %>
  <div class="column is-one-quarter">
    <div class="card">
      <div class="card-content">
        <div class="media">
          <div class="media-left">
            <figure class="image is-96x96">
              <%= link_to image_tag("#{url_for(pokemon.image)}", alt: "#{pokemon.name}_image"), pokemon_path(pokemon) %>
            </figure>
          </div>
          <div class="media-content">
            <p class="subtitle is-7">#<%= pokemon.dex_id %></p>
            <p class="title is-4"><%= link_to pokemon.name, pokemon_path(pokemon), class: 'char-card-title' %></p>
            <p class="subtitle is-6"><%= pokemon.species %></p>
          </div>
        </div>
        <br/>
        <br/>
        <div class="content">
          <p class="subtitle is-5" style="text-align:center;"><%= number_to_currency(pokemon.price) %></p>
        </div>
      </div>
      <div class="card-footer is-size-5">
        <% pokemon.typings.each do |typing| %>
          <%= link_to typing.name, typing_path(typing), class: "card-footer-item i#{typing.color_class}" %>
        <% end %>
      </div>
      <footer class="card-footer">
        <div class="card-footer-item">Add to Cart</div>
      </footer>
    </div>
  </div>
<% end %>